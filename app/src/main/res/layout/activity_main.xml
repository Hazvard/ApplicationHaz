<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:backgroundTint="#BEC2BE" android:background="#BEC2BE">
    <Button
            android:text="@string/chronometre"
            android:layout_width="293dp"
            android:layout_height="76dp" android:id="@+id/chrono"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="164dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/photo"
            android:backgroundTint="#606668" tools:ignore="TextContrastCheck"/>
    <Button
            android:text="@string/bonjours"
            android:layout_width="293dp"
            android:layout_height="76dp" android:id="@+id/bonjour"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="164dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/photo"
            android:backgroundTint="#FC3022" tools:ignore="TextContrastCheck"/>
    <Button
            android:text="@string/photos"
            android:layout_width="293dp"
            android:layout_height="76dp" android:id="@+id/photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/chrono" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bonjour" android:backgroundTint="#C91003"
            tools:ignore="TextContrastCheck"/>
</androidx.constraintlayout.widget.ConstraintLayout>